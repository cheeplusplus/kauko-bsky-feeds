{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://github.com/cheeplusplus/kauko-bsky-feeds/bsky.config.schema.json",
    "type": "object",
    "properties": {
        "BskyConfig": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Auth": {
                    "type": "object",
                    "properties": {
                        "Username": {
                            "type": "string"
                        },
                        "Password": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "Username",
                        "Password"
                    ]
                },
                "Identity": {
                    "type": "object",
                    "properties": {
                        "Hostname": {
                            "description": "Hostname of this server",
                            "type": "string",
                            "format": "hostname"
                        },
                        "PublishedAtUri": {
                            "description": "The URI lists will be published to",
                            "type": "string",
                            "$ref": "#/definitions/atUriForDid"
                        }
                    },
                    "required": [
                        "Hostname",
                        "PublishedAtUri"
                    ]
                },
                "Web": {
                    "type": "object",
                    "properties": {
                        "EnableDevEndpoints": {
                            "type": "boolean"
                        },
                        "EnableInstall": {
                            "type": "boolean"
                        }
                    }
                },
                "FeedProcessors": {
                    "description": "FeedProcessor configurations",
                    "type": "object",
                    "propertyNames": {
                        "maxLength": 24
                    },
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "Type": {
                                "description": "FeedProcessor class name",
                                "type": "string"
                            },
                            "Config": {
                                "description": "FeedProcessor configuration",
                                "type": "object",
                                "properties": {
                                    "DisplayName": {
                                        "description": "Published list display name",
                                        "type": "string",
                                        "maxLength": 24
                                    },
                                    "Description": {
                                        "description": "Published list description",
                                        "type": "string"
                                    },
                                    "RestrictToFeedOwner": {
                                        "description": "Restrict to the feed owner?",
                                        "type": "boolean"
                                    },
                                    "Install": {
                                        "description": "Install this feed?",
                                        "type": "boolean"
                                    }
                                },
                                "required": [
                                    "DisplayName",
                                    "Description"
                                ]
                            }
                        },
                        "required": [
                            "Type",
                            "Config"
                        ],
                        "oneOf": [
                            {
                                "$ref": "#/definitions/FeedProcessorTimelineMinusList"
                            },
                            {
                                "$ref": "#/definitions/FeedProcessorListImagesOnly"
                            },
                            {
                                "$ref": "#/definitions/FeedProcessorBestArt"
                            },
                            {
                                "$ref": "#/definitions/FeedProcessorLikesImagesOnly"
                            },
                            {
                                "$ref": "#/definitions/FeedProcessorPopularAmong"
                            }
                        ]
                    },
                    "minProperties": 1
                }
            },
            "required": [
                "Auth",
                "Identity",
                "FeedProcessors"
            ]
        },
        "LofiConfig": {
            "type": "object",
            "properties": {
                "CruiseOwnFeed": {
                    "type": "boolean"
                },
                "HideRepliesToNotFollowing": {
                    "type": "boolean"
                },
                "BackfillMinutes": {
                    "type": "number",
                    "minimum": 0
                }
            }
        }
    },
    "required": [
        "BskyConfig"
    ],
    "definitions": {
        "didDocument": {
            "$comment": "DID document (did:plc:XYZ)",
            "type": "string",
            "pattern": "^did:plc:\\w+$"
        },
        "atUriForDid": {
            "$comment": "AT URI for DID document (at://did:plc:XYZ)",
            "type": "string",
            "pattern": "^at:\\/\\/did:plc:\\w+$"
        },
        "atUriForList": {
            "$comment": "AT URI for list",
            "type": "string",
            "pattern": "^at:\\/\\/did:plc:\\w+\/app\\.bsky\\.graph\\.list\/\\w+$"
        },
        "FeedProcessorTimelineMinusList": {
            "type": "object",
            "properties": {
                "Type": {
                    "type": "string",
                    "const": "TimelineMinusList"
                },
                "Config": {
                    "type": "object",
                    "properties": {
                        "ListUri": {
                            "description": "List URI used for filtering",
                            "$ref": "#/definitions/atUriForList"
                        },
                        "FetchTimeline": {
                            "description": "Fetch the timeline instead of using the cache",
                            "type": "boolean"
                        },
                        "AdditionalLists": {
                            "description": "Additional lists to filter out",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/atUriForList"
                            }
                        },
                        "AlwaysShowListUser": {
                            "description": "List users to always show",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/didDocument"
                            }
                        },
                        "MuteUsers": {
                            "description": "Users to mute",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/didDocument"
                            }
                        },
                        "ShowSelfPosts": {
                            "description": "Show self posts?",
                            "type": "boolean",
                            "default": true
                        },
                        "ShowReposts": {
                            "description": "Show reposts?",
                            "type": "string",
                            "default": "All",
                            "enum": [
                                "All",
                                "None",
                                "FollowingOnly"
                            ]
                        },
                        "ShowReplies": {
                            "description": "Show replies?",
                            "type": "string",
                            "default": "All",
                            "enum": [
                                "All",
                                "None",
                                "FollowingOnly",
                                "FollowingOnlyTail"
                            ]
                        },
                        "ShowQuotePosts": {
                            "description": "Show quote posts?",
                            "type": "string",
                            "default": "All",
                            "enum": [
                                "All",
                                "None",
                                "FollowingOnly"
                            ]
                        },
                        "IncludeListMutuals": {
                            "description": "Include posts from list from mutuals?",
                            "type": "boolean",
                            "default": false
                        },
                        "AlwaysShowUserReposts": {
                            "description": "Always show reposts from these specific users",
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/didDocument"
                            }
                        }
                    },
                    "required": [
                        "ListUri"
                    ]
                }
            }
        },
        "FeedProcessorListImagesOnly": {
            "type": "object",
            "properties": {
                "Type": {
                    "type": "string",
                    "const": "ListImagesOnly"
                },
                "Config": {
                    "type": "object",
                    "properties": {
                        "ListUri": {
                            "description": "List URI used for filtering",
                            "$ref": "#/definitions/atUriForList"
                        }
                    },
                    "required": [
                        "ListUri"
                    ]
                }
            }
        },
        "FeedProcessorBestArt": {
            "type": "object",
            "properties": {
                "Type": {
                    "type": "string",
                    "const": "BestArt"
                },
                "Config": {
                    "type": "object",
                    "properties": {
                        "BalanceInteractions": {
                            "description": "Balance interactions to follower count?",
                            "type": "boolean"
                        },
                        "FeedLimit": {
                            "description": "Number of results to show in the feed",
                            "type": "number",
                            "minimum": 1,
                            "default": 25
                        },
                        "MinInteractions": {
                            "description": "Minimum interactions required to consider post",
                            "type": "number",
                            "minimum": 1,
                            "default": 3
                        },
                        "RestrictToListUri": {
                            "description": "Optional list URI used for filtering",
                            "$ref": "#/definitions/atUriForList"
                        }
                    }
                }
            }
        },
        "FeedProcessorLikesImagesOnly": {
            "type": "object",
            "properties": {
                "Type": {
                    "type": "string",
                    "const": "LikesImagesOnly"
                },
                "Config": {
                    "type": "object",
                    "properties": {
                        "FetchTimeline": {
                            "description": "Fetch the timeline instead of using the cache",
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "FeedProcessorPopularAmong": {
            "type": "object",
            "properties": {
                "Type": {
                    "type": "string",
                    "const": "PopularAmong"
                },
                "Config": {
                    "type": "object",
                    "properties": {
                        "TargetGroup": {
                            "description": "Group to target popularity against",
                            "type": "string",
                            "default": "following",
                            "enum": ["followers", "following", "mutuals"]
                        },
                        "MinRelevance": {
                            "description": "Number of unique users needed interacting to show a post",
                            "type": "number",
                            "default": 2,
                            "minimum": 0
                        },
                        "ImagesOnly": {
                            "description": "Filter to images only",
                            "type": "boolean"
                        },
                        "ImagesChecksServer": {
                            "$comment": "This is needed if the database is filtering posts",
                            "description": "Perform the images only check against the server instead of the db",
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    }
}