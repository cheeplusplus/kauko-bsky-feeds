{
    "type": "object",
    "properties": {
        "IngestConfig": {
            "type": "object",
            "properties": {
                "SaveMaxSec": {
                    "description": "Maximum duration between saves, in seconds.",
                    "type": "number"
                },
                "SaveMaxSize": {
                    "description": "Maximum rows to save in one operation.",
                    "type": "number"
                },
                "Verbose": {
                    "description": "Enable verbose logging",
                    "type": "boolean"
                },
                "ConsumeHistoricFeed": {
                    "description": "Consume historic feed, otherwise consume from tip of firehose",
                    "type": "boolean"
                },
                "FeedHistoryDays": {
                    "description": "Number of days to keep.",
                    "type": "number"
                },
                "SingleCollection": {
                    "description": "Single Jetstream collections to ingest. Use to override default.",
                    "type": "string"
                },
                "DisableCleanup": {
                    "description": "Disable the cleanup inverval. Mostly for single-collection mode so they don't race each other.",
                    "type": "boolean"
                },
                "Filter": {
                    "description": "Filter certain collections by DIDs",
                    "type": "object",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "UserFollowsAndLists": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/didDocument"
                                }
                            },
                            "ListUris": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/atUriForList"
                                }
                            },
                            "Dids": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/didDocument"
                                }
                            }
                        }
                    }
                },
                "MetricsUriPrefix": {
                    "type": "string",
                    "format": "uri"
                }
            }
        }
    },
    "definitions": {
        "didDocument": {
            "$comment": "DID document (did:plc:XYZ)",
            "type": "string",
            "pattern": "^did:plc:\\w+$"
        },
        "atUriForDid": {
            "$comment": "AT URI for DID document (at://did:plc:XYZ)",
            "type": "string",
            "pattern": "^at:\\/\\/did:plc:\\w+$"
        },
        "atUriForList": {
            "$comment": "AT URI for list",
            "type": "string",
            "pattern": "^at:\\/\\/did:plc:\\w+\/app\\.bsky\\.graph\\.list\/\\w+$"
        }
    }
}